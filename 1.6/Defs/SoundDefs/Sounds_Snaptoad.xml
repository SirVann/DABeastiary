<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Ability -->
  <SoundDef>
    <defName>DA_FrogLeap_Start</defName>  
    <context>MapOnly</context>  
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Snaptoad/FrogleapStart</clipPath>
          </li>
        </grains>      
        <volumeRange>20</volumeRange>
        <pitchRange>1.1~1.3</pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>DA_FrogLeap_Landing</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Snaptoad/FrogleapLanding</clipPath>
          </li>
        </grains>
        <volumeRange>15</volumeRange>
        <pitchRange>0.9~1</pitchRange>
      </li>
    </subSounds>
  </SoundDef>
  
  <!-- Animal -->
  <SoundDef>
    <defName>DA_Pawn_Snaptoad_Call</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Snaptoad/Snaptoad_Call</clipFolderPath>
          </li>
        </grains>
        <volumeRange>15~15</volumeRange>
        <pitchRange>1~1.12</pitchRange>
        <distRange>0~50</distRange>
      </li>
    </subSounds>
  </SoundDef>
  
  <SoundDef>
    <defName>DA_Pawn_Snaptoad_Angry</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipFolderPath>Snaptoad/Pawn_Snaptoad_Angry</clipFolderPath>
          </li>
        </grains>
        <volumeRange>25~25</volumeRange>
        <pitchRange>0.95~1.1</pitchRange>
        <distRange>0~70</distRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>DA_Pawn_Snaptoad_Death</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipFolderPath>Snaptoad/Pawn_Snaptoad_Death</clipFolderPath>
          </li>
        </grains>
        <volumeRange>25~25</volumeRange>
        <pitchRange>0.97~1.12</pitchRange>
        <distRange>0~70</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>DA_Pawn_Snaptoad_Wounded</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipFolderPath>Snaptoad/Pawn_Snaptoad_Pain</clipFolderPath>
          </li>
        </grains>
        <volumeRange>21~21</volumeRange>
        <pitchRange>1.02~1.17</pitchRange>
        <distRange>0~70</distRange>
      </li>
    </subSounds>
  </SoundDef>

</Defs>
