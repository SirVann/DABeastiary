	 <BorealForest>0.08</BorealForest>
	 <ZBiome_GlacialShield MayRequire="zylle.MoreVanillaBiomes">0.05</ZBiome_GlacialShield>
	</wildBiomes>
	</race>
  </ThingDef>
  
