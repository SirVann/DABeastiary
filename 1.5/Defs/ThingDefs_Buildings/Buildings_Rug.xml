<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <DesignatorDropdownGroupDef>
      <defName>LarpahRugs</defName>
    </DesignatorDropdownGroupDef>

	<ThingDef ParentName="BuildingBase">
		<defName>DA_TrollRug</defName>
		<label>bearded troll rug (2x2)</label>
		<description>A trophy marking the victory over a bearded troll. The warm and durable leather of the troll makes for the perfect rug, but beware of the teeth.</description>
		<thingClass>Building</thingClass>
		<wipesPlants>true</wipesPlants>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<designationCategory>Floors</designationCategory>
		
		<graphicData>
			<texPath>Building/Rug/TrollRug</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2.5,2.5)</drawSize>
		</graphicData>
		
		
		<blocksAltitudes>
			<li>FloorCoverings</li>
		</blocksAltitudes>
		
		<selectable>true</selectable>
		<useHitPoints>true</useHitPoints>
    	<defaultPlacingRot>North</defaultPlacingRot>
		<statBases>
		    <Flammability>1.2</Flammability>
			<WorkToMake>7000</WorkToMake>
			<Beauty>7</Beauty>
			<Mass>5</Mass>
		</statBases>
		
		<researchPrerequisites>
			<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_LeatherTanning</li>
		</researchPrerequisites>
		
		<building>
			<isEdifice>false</isEdifice>
		</building>
		
		<costList>
			<DA_Leather_Troll>40</DA_Leather_Troll>
		</costList>
		
		<size>(2,2)</size>
	</ThingDef>
	
