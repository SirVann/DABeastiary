		</statBases>
		
		<researchPrerequisites>
			<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_LeatherTanning</li>
		</researchPrerequisites>
		
		<building>
			<isEdifice>false</isEdifice>
		</building>
		
		<costList>
			<DA_Leather_Drog>70</DA_Leather_Drog>
			<DA_DrogTusk>2</DA_DrogTusk>
