			<texPath>Building/Rug/DrogRug</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5.2,5.2)</drawSize>
			<drawOffset>(0,-5,0)</drawOffset>
		</graphicData>
		
		
		<blocksAltitudes>
			<li>FloorCoverings</li>
		</blocksAltitudes>
		
