<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceVerbBase">
    <defName>DA_DrogTusk</defName>
    <label>drog tusk</label>
    <description>The tusk of a northern drog. A valuable and durable trophy which can be wielded as a deadly weapon.</description>
    <possessionCount>1</possessionCount>
	
    <graphicData>
      <texPath>Item/DrogTusk</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-35</equippedAngleOffset>
	
    <statBases>
      <MarketValue>450</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>3.2</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
	
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <relicChance>2</relicChance>
	
    <comps>
      <li Class="CompProperties_Styleable"></li>
    </comps>
	
    <weaponClasses>
      <li>Melee</li>
      <li>MeleePiercer</li>
    </weaponClasses>
	
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <chanceFactor>0.5</chanceFactor>
      </li>
    </tools>
	
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>


  <ThingDef ParentName="ResourceBase">
    <defName>DA_PetrifyingGland</defName>
    <label>petrifying gland</label>
    <description>A large gland extracted from a Crestel. It oozes a thick and potent venom capable of completely paralysing the muscles and nerves.</description>
    <possessionCount>1</possessionCount>
	
    <graphicData>
      <texPath>Item/PetrifyingGland</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	
    <statBases>
      <MarketValue>650</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.9</Mass>
      <Flammability>1</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
	
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>5</stackLimit>
	
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>

</Defs>
