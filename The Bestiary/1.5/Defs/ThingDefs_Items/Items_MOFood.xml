			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawGarlic</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_Salt</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<DA_MealBreadedTrollsteak>5</DA_MealBreadedTrollsteak>
		</products>
		<fixedIngredientFilter>
