		<recipeUsers>
			<li>DankPyon_StoneOven</li>
			<li>DankPyon_StoneOvenLarge</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DA_TrollMeat</li>
					</thingDefs>
				</filter>
