<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef MayRequire="DankPyon.Medieval.Overhaul">
		<defName>DA_CookMealBreadedTrollsteak</defName>
		<label>bake Breaded trollsteak</label>
		<description>Prepare and bake a breaded trollsteak.</description>
		<jobString>Baking trollsteak.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<researchPrerequisites>
			<li>DankPyon_AdvancedCooking</li>
			<li>DankPyon_Oven</li>
		</researchPrerequisites>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workAmount>1100</workAmount>
		<recipeUsers>
			<li>DankPyon_StoneOven</li>
			<li>DankPyon_StoneOvenLarge</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DA_TrollMeat</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_Flour</li>
					</thingDefs>
				</filter>
				<count>0.16</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawGarlic</li>
					</thingDefs>
				</filter>
				<count>0.1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_Salt</li>
					</thingDefs>
				</filter>
				<count>0.1</count>
			</li>
		</ingredients>
		<products>
			<DA_MealBreadedTrollsteak>1</DA_MealBreadedTrollsteak>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>DA_TrollMeat</li>
				<li>DankPyon_Flour</li>
				<li>DankPyon_RawGarlic</li>
				<li>DankPyon_Salt</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>DA_TrollMeat</li>
				<li>DankPyon_Flour</li>
				<li>DankPyon_RawGarlic</li>
				<li>DankPyon_Salt</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Cooking>10</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>
	
